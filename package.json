{
  "name": "simple-splat-mesh-viewer",
  "version": "1.0.0",
  "description": "A simple web viewer for comparing Gaussian splats with 3D models",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "npx http-server src -p 8080 --cors -c-1",
    "dev": "npx http-server src -p 8080 --cors -c-1",
    "tauri": "tauri",
    "tauri:dev": "npx tauri dev",
    "tauri:build": "npx tauri build",
    "vendor": "node scripts/vendor-deps.mjs",
    "branded": "node scripts/build-branded.mjs",
    "docker:build": "docker build -f docker/Dockerfile -t splat-mesh-viewer .",
    "docker:run": "docker run -p 8080:80 splat-mesh-viewer"
  },
  "keywords": [
    "gaussian-splatting",
    "3d-viewer",
    "threejs",
    "gltf",
    "ply"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "serve": "^14.2.0"
  }
}
