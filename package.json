{
  "name": "simple-splat-mesh-viewer",
  "version": "1.0.0",
  "description": "A simple web viewer for comparing Gaussian splats with 3D models",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "npx tauri dev",
    "tauri:build": "npx tauri build",
    "branded": "node scripts/build-branded.mjs",
    "docker:build": "vite build && docker build -f docker/Dockerfile -t splat-mesh-viewer .",
    "docker:run": "docker run -p 8080:80 splat-mesh-viewer",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,ts,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,css,html}\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "gaussian-splatting",
    "3d-viewer",
    "threejs",
    "gltf",
    "ply"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tauri-apps/cli": "^2.10.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "jsdom": "^26.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@sparkjsdev/spark": "^0.1.10",
    "fflate": "^0.8.2",
    "three": "^0.170.0",
    "three-e57-loader": "^1.2.0",
    "web-e57": "^1.2.0"
  }
}
